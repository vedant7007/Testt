#include<stdio.h>
#include<string.h>
void main()
{
char a,str1[30];
int len,flag=1,i=0;
printf("enter the  string");
gets(str1);
len=strlen(str1);
printf("the length of string is %d\n",len);
for(i=0;i<len/2;i++)
{
if(str1[i]!=str1[len-i-1])
{
flag=0;
break;
}
}
if(flag==1)
{
printf("the %s string is palindrome\n",str1);
}
else
{
printf("the %s string is not palindrome\n",str1);
}
}
