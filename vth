#include<stdio.h>
#include<string.h>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             void main()
{
char str[30];
int i,len,temp;
printf("enter the string");
gets(str);
for(i=0;str[i]!='\0';i++)
{
len++;
}
printf("the length of string is %d\n",len);
for(i=0;i<len/2;i++)
{
temp=str[i];
str[i]=str[len-i-1];
str[len-i-1]=temp;
}
printf("the %s string is reversed\n",str);
}
